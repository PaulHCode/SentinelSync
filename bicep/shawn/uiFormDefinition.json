{
	"$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
	"view": {
		"kind": "Form",
		"properties": {
			"title": "Test Form View",
			"steps": [
				{
					"name": "basics",
					"label": "Basics",
					"elements": [
						{
							"name": "resourceScope",
							"type": "Microsoft.Common.ResourceScope",
							"location": {
								"resourceTypes": [
									"microsoft.resources/resourcegroups"
								]
							}
						},
						{
							"name": "functionAppName",
							"type": "Microsoft.Common.TextBox",
							"label": "Function App Name",
							"subLabel": "",
							"toolTip": "The name of the function app that you wish to create.",
							"constraints": {
								"required": false,
								"regex": "",
								"validationMessage": "",
								"validations": []
							},
							"infoMessages": [],
							"visible": true
						},
						{
							"name": "packageUri",
							"type": "Microsoft.Common.TextBox",
							"label": "Package Uri",
							"subLabel": "",
							"defaultValue": "https://github.com/shawntmeyer/SentinelSync/blob/Deployment/SentinelSync.zip",
							"toolTip": "",
							"constraints": {
								"required": false,
								"regex": "",
								"validationMessage": "",
								"validations": []
							},
							"infoMessages": [],
							"visible": true
						},
						{
							"name": "powerShellVersion",
							"type": "Microsoft.Common.TextBox",
							"label": "Power Shell Version",
							"subLabel": "",
							"defaultValue": "7.4",
							"toolTip": "The PowerShell version",
							"constraints": {
								"required": false,
								"regex": "",
								"validationMessage": "",
								"validations": []
							},
							"infoMessages": [],
							"visible": true
						},
						{
							"name": "sentinelWorkspace",
							"type": "Microsoft.Solutions.ResourceSelector",
							"label": "Sentinel Workspace",
							"resourceType": "Microsoft.OperationsManagement/solutions"
						}
					]
				}
			]
		},
		"outputs": {
			"kind": "ResourceGroup",
			"location": "[steps('basics').resourceScope.location.name]",
			"resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
			"parameters": {
				"functionAppName": "[steps('basics').functionAppName]",
				"packageUri": "[steps('basics').packageUri]",
				"powerShellVersion": "[steps('basics').powerShellVersion]",
				"sentinelWorkspaceName": "[last(split(steps('basics').sentinelWorkspace.id, '/'))]",
				"sentinelSubscriptionId": "[first(skip(split(steps('basics').sentinelWorkspace.id, '/'), 2))]",
				"sentinelResourceGroupName": "[first(skip(split(steps('basics').sentinelWorkspace.id, '/'), 4))]"
			}
		}
	}
}